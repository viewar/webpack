    "postcss-preset-env": "^6.7.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "regenerator-runtime": "^0.13.3",
    "sass": "^1.26.2",
    "sass-loader": "^8.0.2",
